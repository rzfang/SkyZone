{
  "name": "sky_zone",
  "version": "1.0.0",
  "description": "Sky Zone",
  "main": "skyzone.js",
  "dependencies": {
    "@riotjs/compiler": "^4.10.0",
    "@riotjs/hydrate": "^4.0.1",
    "@riotjs/ssr": "^4.2.1",
    "async": "^2.6.3",
    "busboy": "^0.3.1",
    "cookie": "^0.3.1",
    "express": "^4.17.1",
    "get-folder-size": "^2.0.1",
    "helmet": "^3.23.3",
    "require-from-string": "^2.0.2",
    "riot": "^4.13.4",
    "sqlite3": "^5.0.0",
    "tar-stream": "^2.1.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-json": "^1.4.0",
    "husky": "^1.3.1",
    "node-sass": "^4.14.1",
    "nodemon": "^1.19.4"
  },
  "scripts": {
    "dev": "nodemon -d 3 -e js,scss,html,tag,riot -w SRC/ ./skyzone.js",
    "lint": "eslint --ext .js,.json SRC/*.js",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/SkyZone.git"
  },
  "keywords": [
    "web",
    "tool"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/SkyZone/issues"
  },
  "homepage": "https://github.com/rzfang/SkyZone#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  },
  "eslintIgnore": [
    "SRC/api.js"
  ]
}
