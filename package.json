{
  "name": "sky_zone",
  "version": "0.0.1",
  "description": "Sky Zone",
  "main": "server.js",
  "dependencies": {
    "async": "^2.6.2",
    "cookie": "^0.3.1",
    "formidable": "^1.2.1",
    "get-folder-size": "^2.0.1",
    "riot": "^3.13.2",
    "sqlite3": "^4.0.6",
    "tar-stream": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-json": "^1.4.0",
    "husky": "^1.3.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11"
  },
  "scripts": {
    "dev": "nodemon -d 3 -e js,scss,html,tag -w SRC/ SRC/RZ-Nd-HTTPServer.js",
    "lint": "eslint --ext .js,.json SRC/*.js",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/SkyZone.git"
  },
  "keywords": [
    "web",
    "tool"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/SkyZone/issues"
  },
  "homepage": "https://github.com/rzfang/SkyZone#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  },
  "eslintIgnore": [
    "SRC/api.js"
  ]
}
