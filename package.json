{
  "name": "sky_zone",
  "version": "1.1.0",
  "description": "Sky Zone",
  "main": "skyzone.mjs",
  "dependencies": {
    "@riotjs/hydrate": "^6.0.0",
    "async": "^3.0.0",
    "cookie": "^0.4.0",
    "get-folder-size": "^3.0.0",
    "markdown-it": "^12.0.0",
    "riot": "^6.0.0",
    "rzjs": "github:rzfang/Js",
    "tar-stream": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-plugin-json": "^3.0.0",
    "node-sass": "^7.0.0",
    "nodemon": "^2.0.0",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "dev": "nodemon --experimental-json-modules -d 3 -e js,scss,html,tag,riot -w SRC/ ./skyzone.mjs",
    "lint": "eslint --ext .js,.json,.mjs --ignore-pattern *.riot.*.mjs *.*js SRC",
    "start": "node --experimental-json-modules skyzone.mjs",
    "start:pm2": "pm2 start --name skyzone npm -- run start",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rzfang/SkyZone.git"
  },
  "keywords": [
    "web",
    "tool"
  ],
  "author": "RZ Fang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rzfang/SkyZone/issues"
  },
  "homepage": "https://github.com/rzfang/SkyZone#readme",
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "json"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-redeclare": [
        "warn",
        {
          "builtinGlobals": true
        }
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  },
  "eslintIgnore": [
    "SRC/api.js"
  ]
}
