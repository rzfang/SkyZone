<tags>
  <icon name='tags' title='分類標籤'/>
  <template if={state.HsPckdId}>
    <a href='/blogs'>取消</a>
    <br/>
  </template>
  <ul if={props.tags.length}>
    <li each={Tg in props.tags}>
      <span if={Tg.IsPckd}>{Tg.Nm}</span>
      <a if={!Tg.IsPckd} href='/blogs?t={Tg.ID}'>{Tg.Nm}</a>
    </li>
  </ul>
  <style>
    :host>icon { margin-right: 10px; }
    :host>ul { display: inline-block; margin: 0; padding: 0; }
    :host>ul>li { display: inline-block; }
    :host>ul>li>a { display: inline-block; margin-right: 5px; }
    :host>ul>li>span { display: inline-block; margin-right: 5px; padding: 0 3px; border: 1px solid; border-radius: 3px; }
  </style>
  <script>
    import icon from './icon.riot';

    export default {
      components: { icon },

      state: {
        HsPckdId: false
      },

      onBeforeMount (props, state) {
        props.tags.find(Tg => {
          if (Tg.IsPckd) {
            this.state.HsPckdId = true;

            return true;
          }
        });
      }
    }
  </script>
</tags>
